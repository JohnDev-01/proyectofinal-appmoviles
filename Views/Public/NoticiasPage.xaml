<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:proyectofinal_appmoviles.Models"
             x:Class="proyectofinal_appmoviles.Views.Public.NoticiasPage"
             Title="Noticias"
             BackgroundColor="White">
    <StackLayout Padding="16"
                 Spacing="12">
        <Label x:Name="MensajeLabel"
               Text=""
               TextColor="Red"
               IsVisible="False"
               FontSize="14" />
        <RefreshView x:Name="NoticiasRefreshView"
                     IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
                     Command="{Binding RefreshCommand}">
            <CollectionView x:Name="NoticiasList"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10"
                               Padding="10"
                               Margin="5"
                               BorderColor="#FF7F11"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="{Binding titulo}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#FF7F11" />
                                <Label Text="{Binding fecha_publicacion}"
                                       FontSize="12"
                                       TextColor="Gray" />
                                <Image Source="{Binding imagen}"
                                       HeightRequest="180"
                                       Aspect="AspectFill" />
                                <Label Text="{Binding descripcion}"
                                       FontSize="13"
                                       TextColor="#333" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </StackLayout>
</ContentPage>