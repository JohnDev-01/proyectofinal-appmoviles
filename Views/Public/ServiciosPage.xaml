<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectofinal_appmoviles.Views.ServiciosPage"
             Title="Servicios">

    <CollectionView x:Name="ServiciosCollection" ItemsSource="{Binding}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                    <StackLayout>
                        <Label Text="{Binding titulo}" FontAttributes="Bold" FontSize="18"/>
                        <Label Text="{Binding descripcion}" FontSize="14"/>
                        <Image Source="{Binding icono}" HeightRequest="50"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
