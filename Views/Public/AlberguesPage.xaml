<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectofinal_appmoviles.Views.Public.AlberguesPage"
             Title="Albergues"
             BackgroundColor="#f2f2f2">

    <StackLayout Padding="10" Spacing="10">
        
        <Label Text="Lista de Albergues"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#333"/>

        <CollectionView x:Name="AlberguesCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="CollectionView_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#ccc" CornerRadius="10" Padding="10" Margin="5" BackgroundColor="White">
                        <StackLayout Spacing="5">
                            <Label Text="{Binding nombre}" FontSize="18" FontAttributes="Bold" TextColor="#222"/>
                            <Label Text="{Binding direccion}" FontSize="14" TextColor="#666"/>
                            <Label Text="{Binding telefono}" FontSize="14" TextColor="#444"/>
                            <Label Text="Provincia: " FontSize="14" TextColor="#888" />
                            <Label Text="{Binding provincia}" FontSize="14" TextColor="#444"/>
                            <Label Text="Capacidad: " FontSize="14" TextColor="#888"/>
                            <Label Text="{Binding capacidad}" FontSize="14" TextColor="#444"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Ver Mapa de Albergues"
                BackgroundColor="#007AFF"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="12"
                HeightRequest="50"
                Clicked="OnVerMapaClicked"/>

    </StackLayout>
</ContentPage>
