<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectofinal_appmoviles.Views.MedidasPage"
             Title="Medidas Preventivas">

    <CollectionView x:Name="ListaMedidas"
                    Margin="10"
                    ItemsLayout="VerticalList">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                    <VerticalStackLayout>
                        <Label Text="{Binding titulo}" FontSize="18" FontAttributes="Bold" />
                        <Label Text="{Binding Descripcion}" FontSize="14" />
                        <Image Source="{Binding imagen, StringFormat='https://adamix.net/defensa_civil/def/{0}'}"
                               HeightRequest="150"
                               Aspect="AspectFill"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>